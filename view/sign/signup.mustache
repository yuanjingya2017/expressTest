<html>
  <head>
  <style>
    .contain_form {
      width: 50%;
    }
    .form_item{
      display: flex;
    }
    .form_item label {
      flex: 1;
      text-align: right;
    }
    .form_item input {
      flex: 1;
    }
  </style>
  </head>
  <body>
    {{#code}}
      {{{success}}}
      {{{loginname}}}
      {{{email}}}
    {{/code}}
    {{^code}}
      <form class="contain_form" action="/signup" method="post">
        <div class="form_item">
          <label for="loginname">用户名</label>
          <input type="text" name="loginname" />
        </div>
        <div class="form_item">
          <label for="email">邮箱</label>
          <input type="text" name="email" />
        </div>
        <div class="form_item">
          <label for="pass">密码</label>
          <input type="password" name="pass" />
        </div>
        <div class="form_item">
          <label for="re_pass">确认密码</label>
          <input type="password" name="re_pass" />
        </div>
        <input  type="submit" value="Submit" />
      </form>
    {{/code}}
  </body>
</html>