<html>
  <head>
  <style>
    .contain_form {
      width: 50%;
    }
    .form_item{
      display: flex;
    }
    .form_item label {
      flex: 1;
      text-align: right;
    }
    .form_item input {
      flex: 1;
    }
  </style>
  </head>
  <body>
    <form class="contain_form" action="/login" method="post">
      <div class="form_item">
        <label for="loginname">用户名</label>
        <input type="text" name="loginname" />
      </div>
      <div class="form_item">
        <label for="pass">密码</label>
        <input type="password" name="pass" />
      </div>
      <input  type="submit" value="Submit" />
    </form>
  </body>
</html>